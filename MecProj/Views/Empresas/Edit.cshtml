@model MecProj.Models.Empresa

@{
    ViewData["Title"] = "Edit";
}
<header>
    <style>
        #formulario {
            margin-right: 50%;
            margin-top: 2%;
            width: 800px;
        }
    </style>
</header>



<h1>Editar <b>@Model.Razao_Social</b></h1>


<div id="formulario">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-row form-content">
            <div class="form-group col-md-7">
                <label asp-for="Razao_Social" class="control-label">Razão Social</label>
                <input asp-for="Razao_Social" class="form-control" placeholder="Nome Empresa." />
                <span asp-validation-for="Razao_Social" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control cpf-mask" placeholder="CNPJ." onKeyPress="MascaraGenerica(this, 'CNPJ')" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-7">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Digite o Email." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-5">
                <label asp-for="Telefone_Celular" class="control-label">Telefone Celular</label>
                <input asp-for="Telefone_Celular" class="form-control" placeholder="(00) 00000-0000" onKeyPress="MascaraGenerica(this, 'TELEFONE')" />
                <span asp-validation-for="Telefone_Celular" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-6">
                <label asp-for="Telefone_Recado" class="control-label">Telefone Recado</label>
                <input asp-for="Telefone_Recado" class="form-control" placeholder="Fixo ou Celular." onKeyPress="MascaraGenerica(this, 'TELEFONE')" />
                <span asp-validation-for="Telefone_Recado" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-6">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" id="estado" class="form-control">
                    <option hidden selected>SELECIONAR</option>
                    <option value="SC">Santa Catarina</option>
                    <option value="PR">Paraná</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-6">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" placeholder="Cidade." />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-xl-6">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Bairro." />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="Rua" class="control-label"></label>
                <input asp-for="Rua" class="form-control" placeholder="Endereço." />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" min="1" placeholder="Número." />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" placeholder="Informações." />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" /> ||
            <a class="btn btn-info" asp-action="Index">Voltar a lista</a>
        </div>
    </form>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
