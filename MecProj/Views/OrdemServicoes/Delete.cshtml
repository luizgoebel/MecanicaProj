@model MecProj.Models.OrdemServico

@{
    ViewData["Title"] = "Delete";
}

<h3>Deseja Realmente Deletar esta Ordem ?</h3>
<div>
    <h4>Cliente <b>@Model.Cliente</b> <i class="far fa-hand-point-left"></i></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Service)*@Serviço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Descricao)*@Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Pecas)*@Peças
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pecas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entrada)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Situacao)*@Situação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Situacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Voltar a lista</a>
    </form>
</div>
