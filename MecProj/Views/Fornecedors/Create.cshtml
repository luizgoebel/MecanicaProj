@model MecProj.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}
<header>
    <style>
        #formulario {
            margin-right: 50%;
            margin-top: 2%;
            width: 800px;
        }
    </style>
</header>
<h1>Cadastro de Fornecedor</h1>
<hr />
<div id="formulario">
    <form class="form-group" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row form-content">
            <div class="form-group col-md-9">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Fornecedor." />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-9">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" placeholder="CNPJ." onKeyPress="MascaraGenerica(this, 'CNPJ')" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group col-md-9">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="Cidade" class="form-control">
                    <option value="" hidden selected>Selecionar</option>
                    <option value="Blumenau">Blumenau</option>
                    <option value="Indaial">Indaial</option>
                </select>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-9">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" placeholder="Bairro." />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Rua" class="control-label"></label>
                <input asp-for="Rua" class="form-control" placeholder="Endereço." />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Numero" class="control-label">Número</label>
                <input asp-for="Numero" class="form-control" placeholder="Número." />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Data_Cadastro" class="control-label">Data Cadastro</label>
                <input asp-for="Data_Cadastro" class="form-control" />
                <span asp-validation-for="Data_Cadastro" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Observacao" class="control-label">Observação</label>
                @*<input asp-for="Observacao" class="form-control" placeholder="Observações."/>*@
                <textarea class="form-control" asp-for="Observacao" placeholder="Observações."></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary" /> ||
            <a class="btn btn-info" asp-action="Index">Voltar a lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

